<Window x:Class="BUPSystem.ProductGUI.ProductGroupRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProductGroupRegister" Height="335" Width="485">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="215,16,0,0" x:Name="textBox1" VerticalAlignment="Top" Width="172" />
        <Button Content="Sök" Height="23" HorizontalAlignment="Left" Margin="392,16,0,0" x:Name="btnSearch" VerticalAlignment="Top" Width="75" />
        <Label Content="Produktgruppregister" Height="39" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="label1" VerticalAlignment="Top" FontSize="20" />
        <ListView x:Name="lvProductGroups" HorizontalAlignment="Left" Height="205" Margin="10,54,0,0" VerticalAlignment="Top" Width="456" ItemsSource="{Binding GroupsList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Produktgrupps ID" DisplayMemberBinding="{Binding ProductGroupID}"/>
                    <GridViewColumn Width="150" Header="Produktgruppsnamn" DisplayMemberBinding="{Binding ProductGroupName}"/>
                    <GridViewColumn Header="Tillhör produktkategori" Width="150" DisplayMemberBinding="{Binding ProductCategoryID}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Välj produktgrupp" Height="23" HorizontalAlignment="Left" Margin="355,270,0,0" x:Name="btnSelect" VerticalAlignment="Top" Width="112" Click="btnSelect_Click" />
        <Button Content="Ändra" Height="23" HorizontalAlignment="Left" Margin="171,270,0,0" x:Name="btnChange" VerticalAlignment="Top" Width="70" Click="btnChange_Click" />
        <Button Content="Lägg till" Height="23" HorizontalAlignment="Left" Margin="295,270,0,0" x:Name="btnAdd" VerticalAlignment="Top" Width="55" Click="btnAdd_Click" />
        <Button x:Name="btnDelete" Content="Ta bort" HorizontalAlignment="Left" Margin="10,274,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>

    </Grid>
</Window>
