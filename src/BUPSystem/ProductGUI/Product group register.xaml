<Window x:Class="BUPSystem.ProductGUI.ProductGroupRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProductGroupRegister" Height="335" Width="485">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="215,16,0,0" x:Name="tbSearch" VerticalAlignment="Top" Width="172" TextChanged="tbSearch_TextChanged" />
        <Button Content="Sök" Height="23" HorizontalAlignment="Left" Margin="392,16,0,0" x:Name="btnSearch" VerticalAlignment="Top" Width="75" />
        <Label Content="Produktgruppregister" Height="39" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="label1" VerticalAlignment="Top" FontSize="20" />
        <ListView x:Name="lvProductGroups" HorizontalAlignment="Left" Height="205" Margin="10,54,0,0" VerticalAlignment="Top" Width="456" ItemsSource="{Binding GroupsList}" SelectedItem="{Binding SelectedProductGroup}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" DisplayMemberBinding="{Binding ProductGroupID}">
                        <GridViewColumnHeader Content="Produktgrupp-ID" Tag="ProductGroupID" Click="GridViewColumnHeader_Click" />
                    </GridViewColumn>
                    <GridViewColumn Width="150" DisplayMemberBinding="{Binding ProductGroupName}">
                        <GridViewColumnHeader Content="Produktgruppsnamn" Tag="ProductGroupName" Click="GridViewColumnHeader_Click" />
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Ändra" Height="23" HorizontalAlignment="Left" Margin="90,270,0,0" x:Name="btnChange" VerticalAlignment="Top" Width="70" Click="btnChange_Click" />
        <Button x:Name="btnDelete" Content="Ta bort" HorizontalAlignment="Left" Margin="10,270,0,15" Width="75" Click="btnDelete_Click"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,270,11,15">
            <Button Content="Lägg till " Height="23" HorizontalAlignment="Left" Margin="0,0,0,0" x:Name="btnAdd" VerticalAlignment="Top" Width="70" Click="btnAdd_Click" />
            <Button Content="Välj" Height="23" HorizontalAlignment="Left" Margin="5,0,0,0" x:Name="btnSelect" VerticalAlignment="Top" Width="80" Click="btnSelect_Click" />
        </StackPanel>
    </Grid>
</Window>
