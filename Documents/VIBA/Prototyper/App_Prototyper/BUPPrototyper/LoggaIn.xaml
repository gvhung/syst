		<Label Content="Lösenord" Height="28" HorizontalAlignment="Left" Margin="47,193,0,0" x:Name="label2" VerticalAlignment="Top" Width="94" />
		<Label Content="IT-service" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="label3" VerticalAlignment="Top" Width="70" FontWeight="Bold" />
		<Label Content="BUP-system" Height="39" Margin="138,100,104,0" x:Name="label4" VerticalAlignment="Top" FontSize="20" Foreground="#FF004683" FontWeight="Bold" />
		<PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="146,193,0,0" VerticalAlignment="Top" Width="173" Height="23"/>
		<Button x:Name="btnLogIn" Content="Logga in" HorizontalAlignment="Left" Height="33.667" Margin="196.333,225.664,0,0" Style="{DynamicResource GlassButtonStyle}" VerticalAlignment="Top" Width="122.667" FontWeight="Bold" d:IsEffectDisabled="True" Click="btnLogIn_Click"/>

	</Grid>
</Window>
